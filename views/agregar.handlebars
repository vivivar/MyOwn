<h1>Agregar Libro</h1>
{{#if error}} <span>{{error}}</span>{{/if}}



<form method="POST" action="/user/addbook">
  <div class="form-group">
    <label>Título</label>
    <input type="text" name="title" class="form-control" placeholder="Título del libro" required type="text">
  </div>
  <div class="form-group">
    <label>Autor</label>
    <input type="text" name="author" class="form-control" placeholder="Autor del libro" required type="text">
  </div>
    <div class="form-group">
    <label>Género</label>
    <input type="text" name="gender" class="form-control" placeholder="Género del libro" required type="text">
  </div>
  
  <input type="submit" class="btn btn-primary" value="Agregar Libro">
</form>